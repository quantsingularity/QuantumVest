# QuantumVest Terraform Configuration Example
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

# AWS Configuration
aws_region = "us-west-2"

# Environment Configuration
environment = "dev"  # Options: dev, staging, prod
app_name    = "quantumvest"

# Network Configuration
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-west-2a", "us-west-2b", "us-west-2c"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs = ["10.0.4.0/24", "10.0.5.0/24", "10.0.6.0/24"]

# Compute Configuration
instance_type = "t3.micro"
key_name      = "your-ssh-key-name"  # Replace with your EC2 key pair name

# Database Configuration
db_instance_class = "db.t3.micro"
db_name           = "quantumvest"
db_username       = "admin"
# IMPORTANT: Use AWS Secrets Manager or environment variables for production
# DO NOT hard-code passwords here
db_password       = ""  # Set via: export TF_VAR_db_password="your-secure-password"

# Resource Tags
default_tags = {
  Terraform   = "true"
  Environment = "dev"
  Project     = "quantumvest"
  ManagedBy   = "terraform"
}

# Notes:
# 1. For production, use AWS Secrets Manager: 
#    data "aws_secretsmanager_secret_version" "db_password" { ... }
# 2. For development, set via environment variable:
#    export TF_VAR_db_password="your-password"
# 3. Never commit actual secrets to version control
