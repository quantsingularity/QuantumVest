# Ansible Lint Configuration for QuantumVest
---
# Exclude paths
exclude_paths:
  - .cache/
  - .git/
  - .github/
  - venv/
  - '*.tar.gz'

# Enable checking of loop variable prefixes
loop_var_prefix: "^(__|{role}_)"

# Offline mode
offline: false

# Parseable output
parseable: false

# Quiet mode
quiet: false

# Verbosity
verbosity: 1

# Enforce use of command instead of shell when possible
use_default_rules: true

# Warn on specific rules
warn_list:
  - experimental
  - role-name

# Skip specific rules
skip_list:
  - yaml[line-length]  # Allow longer lines in some cases
  - fqcn[action-core]  # Allow short module names for readability

# Tags to run
# tags: []

# Set warning behavior
warnings_as_errors: false

# Rules configuration
rules:
  # Command module should not be used in place of more specific modules
  command-instead-of-module:
    severity: HIGH

  # Tasks should have names
  name[play]:
    severity: MEDIUM

  # Role name should match pattern
  role-name:
    severity: LOW
    
  # YAML formatting
  yaml:
    severity: LOW
