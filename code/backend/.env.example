# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-secret-key-change-in-production
PORT=5000

# Database Configuration
# For development, using SQLite (no setup required)
# For production, use PostgreSQL
DATABASE_URL=sqlite:///quantumvest_dev.db
# DATABASE_URL=postgresql://quantumvest:password@localhost/quantumvest

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# API Keys (Optional - will work without these)
ALPHA_VANTAGE_API_KEY=
COINAPI_KEY=
YAHOO_FINANCE_API_KEY=

# Web3 Configuration (Optional)
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_NETWORK=mainnet

# Redis Configuration (Optional - caching will be disabled if not available)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=

# CORS Configuration
CORS_ORIGINS=*

# Feature Flags
ENABLE_PORTFOLIO_OPTIMIZATION=true
ENABLE_REAL_TIME_DATA=true
ENABLE_BLOCKCHAIN_FEATURES=false
ENABLE_ADVANCED_ANALYTICS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=quantumvest.log

# Model Configuration
MODEL_PATH=../ai_models/
PREDICTION_CACHE_TTL=3600

# Performance
BCRYPT_LOG_ROUNDS=12
SLOW_QUERY_THRESHOLD=0.5
ENABLE_PROFILING=false
